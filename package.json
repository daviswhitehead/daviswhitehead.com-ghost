{
  "name": "daviswhitehead-ghost",
  "description": "A custom Ghost theme for entrepreneurs.",
  "version": "1.0.1",
  "private": true,
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Davis Whitehead",
    "email": "whitehead.davis@gmail.com",
    "url": "https://www.daviswhitehead.com/"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "entrepreneur",
    "portfolio"
  ],
  "docs": "https://github.com/daviswhitehead/daviswhitehead.com-ghost",
  "config": {
    "posts_per_page": 6,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 720
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1200
      },
      "xxl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "background_color": {
        "type": "color",
        "default": "#737373"
      },
      "navigation_layout": {
        "type": "select",
        "options": [
          "Logo on the left",
          "Logo in the middle",
          "Stacked"
        ],
        "default": "Logo on the left"
      },
      "typography": {
        "type": "select",
        "options": [
          "Modern sans-serif",
          "Elegant serif",
          "Consistent mono"
        ],
        "default": "Modern sans-serif"
      },
      "footer_text": {
        "type": "text",
        "default": "Davis Whitehead Â© 2023"
      },
      "header_section_layout": {
        "type": "select",
        "options": [
          "Side by side",
          "Large background",
          "Typographic profile",
          "Centered circle"
        ],
        "default": "Centered circle",
        "group": "homepage"
      },
      "home_main_primary_header": {
        "type": "text",
        "default": "Hi, I'm Davis",
        "group": "homepage"
      },
      "home_main_secondary_header": {
        "type": "text",
        "default": "I'm an entrepreneur who makes products people love. I write about product-building and living intentionally.",
        "group": "homepage"
      },
      "home_products_primary_header": {
        "type": "text",
        "default": "Products",
        "group": "homepage"
      },
      "home_products_secondary_header": {
        "type": "text",
        "default": "Check out these products I've built.",
        "group": "homepage"
      },
      "home_writing_primary_header": {
        "type": "text",
        "default": "Writing",
        "group": "homepage"
      },
      "home_writing_secondary_header": {
        "type": "text",
        "default": "Check out this writing I've built.",
        "group": "homepage"
      },
      "post_feed_layout": {
        "type": "select",
        "options": [
          "Classic",
          "Typographic",
          "Parallax",
          "London"
        ],
        "default": "Classic",
        "group": "homepage"
      }
    }
  },
  "scripts": {
    "dev": "gulp",
    "test": "gscan .",
    "zip": "gulp zip"
  },
  "devDependencies": {
    "@tryghost/shared-theme-assets": "2.4.1",
    "autoprefixer": "10.4.15",
    "beeper": "2.1.0",
    "cssnano": "6.0.1",
    "gscan": "4.38.0",
    "gulp": "4.0.2",
    "gulp-concat": "2.6.1",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-uglify": "3.0.2",
    "gulp-zip": "5.1.0",
    "postcss": "8.4.29",
    "postcss-easy-import": "4.0.0",
    "pump": "3.0.0"
  }
}
